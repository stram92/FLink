<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="4dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="?android:attr/windowBackground"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">
        <FrameLayout
            android:id="@+id/financesFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frame_both">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/financesEntryIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@drawable/frame_both">
                    <ImageView
                        android:id="@+id/financesBoth"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/heart"
                        android:layout_gravity="center"
                        app:tint="@color/grey_text"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/financesEntryPayer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:textColor="@color/grey_text"/>
                </FrameLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/financesEntryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/financesEntryIcon"
                    app:layout_constraintEnd_toStartOf="@id/financesEntryText"
                    android:layout_marginStart="12dp">
                    <TextView
                        android:id="@+id/financesEntryDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/financesEntryPayedForAmount"
                        app:layout_constraintStart_toStartOf="parent"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:textColor="@color/grey_text" />
                    <TextView
                        android:id="@+id/financesEntryPayedForAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/financesEntryDescription"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textSize="11sp"
                        android:gravity="center"
                        android:textColor="@color/green_plus"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/financesEntryText"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp">
                    <TextView
                        android:id="@+id/financesEntryAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/financesEntryEffectiveDate"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="end"
                        android:textColor="@color/grey_text"/>
                    <TextView
                        android:id="@+id/financesEntryEffectiveDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toBottomOf="@id/financesEntryAmount"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:gravity="end"
                        android:textColor="@color/grey_text"
                        android:textSize="11sp"
                        android:layout_gravity="end"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>