<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="4dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="?android:attr/windowBackground"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">
        <FrameLayout
            android:id="@+id/financesFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/frame_both">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:id="@+id/financesEntryIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:background="@drawable/frame_both">

                    <ImageView
                        android:id="@+id/financesBoth"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/heart"
                        android:layout_gravity="center"
                        app:tint="@color/grey_text"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/financesEntryPayer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dp"
                        android:gravity="center"
                        android:textSize="20dp"
                        android:textColor="@color/grey_text"/>

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/financesEntryText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/financesEntryIcon">
                    <TextView
                        android:id="@+id/financesEntryDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/grey_text" />
                    <TextView
                        android:id="@+id/financesEntryPayedForAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:layout_marginLeft="12dp"
                        android:textColor="@color/green_plus"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toRightOf="@id/financesEntryText"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="vertical"
                    android:layout_marginRight="12dp">
                    <TextView
                        android:id="@+id/financesEntryAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/grey_text"/>
                    <TextView
                        android:id="@+id/financesEntryEffectiveDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/grey_text"
                        android:textSize="10dp"
                        android:layout_gravity="end"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>